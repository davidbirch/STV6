<% active_level = 0 %>
<% level_0_name = "Home Icon" %>
<% level_0_link = root_url %>
<% level_1_name = nil %>
<% level_1_link = nil %>
<% level_2_name = nil %>
<% level_2_link = nil %>
<% header = nil %>
<%= render "shared/home_header" %>
<%= render "shared/adsense_responsive_banner_1" %>    
<div class="container">
   <%= render "shared/adsense_responsive_banner_2" %>    
   <div class="row extra-top-margin">         
      <%= render "shared/flash" %>  
      <div class="col-xs-12 col-md-1 col-lg-2"></div>
      <div class="col-xs-12 col-md-10 col-lg-8">   
         <div class="row">
            <% Region.whitelisted.each do |region| %>
            <div class="col-xs-12 col-sm-4">
              <div class="thumbnail">
               <%= link_to ("/"+region.friendly_id) do %>
                  <%= image_tag("cities/city_of_"+region.url_friendly_name+"_140x140.png", size: "140x140", alt: region.name) %> 
                  <div class="caption">
                     <h3 class="text-center"><%= region.name %></h3>
                  </div>
               <% end %>
              </div>
            </div>
            <% end %>         
         </div><!-- /row -->
      </div><!-- /col-xs-12 col-md-10 col-lg-8 -->
      <div class="col-xs-12 col-md-1 col-lg-2"></div>
   </div><!-- /row -->
   <%= render "shared/adsense_responsive_banner_2" %>    
</div> <!-- /container -->
<%= render "shared/adsense_responsive_banner_1" %>   
<%= render "schema_org_markup", locals: {active_level: active_level, level_0_name: level_0_name, level_0_link: level_0_link, level_1_name: level_1_name, level_1_link: level_1_link, level_2_name: level_2_name, level_2_link: level_2_link} %> 