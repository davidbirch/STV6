<p id="notice"><%= notice %></p>
<h3>Listing Raw Channels</h3>
<p><%= link_to 'New', new_raw_channel_path, :class => 'btn btn-xs btn-primary' %></p>

<%= will_paginate @raw_channels, renderer: BootstrapPagination::Rails %>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Channel Name</th>
      <th>XMLTV ID</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @raw_channels.each do |raw_channel| %>
      <tr id="<%= raw_channel.id %>">
        <td><%= link_to raw_channel.channel_name, raw_channel %></td>
        <td><%= raw_channel.xmltv_id %></td>
        <td>
          <%= link_to 'Edit', edit_raw_channel_path(raw_channel), :class => 'btn btn-xs btn-info' %>
          <%= link_to 'Destroy', raw_channel, data:{confirm: 'Are you sure?'}, method: :delete, :class => 'btn btn-xs btn-danger' %>
        </td>     
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @raw_channels, renderer: BootstrapPagination::Rails %>

<br>

<%= link_to 'New Raw Channel', new_raw_channel_path %>
