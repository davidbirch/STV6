<table class="table", id="form-show">
  <tbody>
    <tr>
      <td>ID</td>
      <td><%= @sport.id %></td>
    </tr>
    <tr>
      <td>Name</td>
      <td><%= @sport.name %></td>
    </tr>
    <tr>
      <td>Black Flag</td>
      <td><%= @sport.black_flag %></td>
    </tr>
    <tr>
      <td>Created At</td>
      <td><%= @sport.created_at %></td>
    </tr>
    <tr>
      <td>Updated At</td>
      <td><%= @sport.updated_at %></td>
    </tr>
  </tbody>
</table>
<p id="form-actions">
  <%= render "shared/form_actions", locals: {actions: ["Edit","Delete"], edit_path: edit_sport_path(@sport), delete_path: @sport} %>  
</p>
