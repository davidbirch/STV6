<% if @region.errors.any? %>
  <div class="bs-callout bs-callout-danger" id="error_explanation">
  <h4><%= pluralize(@region.errors.count, "error") %> prohibited this article from being saved:</h4>
  <ul>
    <% @region.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
</div>
<% end %>
<%= form_for @region do |f| %>
  <table class="table">
      <tbody>
        <tr>
          <td><%= f.label :id %></td>
          <td><%= f.text_field :id, :disabled=>true %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :name %></td>
          <td><%= f.text_field :name, :placeholder=>"Region Name ..." %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :time_zone_name %></td>
          <td><%= f.text_field :time_zone_name, :placeholder=>"Region Time Zone Name ..." %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :region_lookup %></td>
          <td><%= f.text_field :region_lookup, :placeholder=>"Region Lookup ..." %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :black_flag %></td>
          <td><%= f.check_box :black_flag %></td>
          <td></td>
        </tr>
      </tbody>
  </table>
  <p>
    <%= render "shared/form_actions", locals: {actions: ["Submit","Cancel"], cancel_path: regions_path} %>
  </p>
<% end %>
 