<h3>Regions
<%= link_to new_region_path, :class => 'btn btn-xs btn-primary' do %>
    <i class="glyphicon glyphicon-plus"></i> New
<% end %>
</h3>
<%= bootstrap_flash %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Program Count</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr id="<%= region.id %>">
        <td><%= link_to region.name, region %></td>
        <td><%= region.programs.count %></td>
        <td>
          <%= link_to edit_region_path(region), :class => 'btn btn-info btn-xs' do %>
            <i class="glyphicon glyphicon-pencil"></i> Edit
          <% end %>
          <%= link_to region, data:{confirm: 'Are you sure?'}, method: :delete, :class => 'btn btn-danger btn-xs' do %>
            <i class="glyphicon glyphicon-trash"></i> Delete
          <% end %>
        </td>   
      </tr>
    <% end %>
  </tbody>
</table>
