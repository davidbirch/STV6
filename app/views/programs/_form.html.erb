<%= semantic_form_for @program do |f| %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :category %>
    <%= f.input :description %>
    <%= f.input :start_datetime %>
    <%= f.input :end_datetime %>
    <%= f.input :region_id %>
    <%= f.input :channel_id %>
    <%= f.input :sport_id %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
