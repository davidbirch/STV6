<p id="notice"><%= notice %></p>

<h1>Listing Programs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Category</th>
      <th>Description</th>
      <th>Start datetime</th>
      <th>End datetime</th>
      <th>Region</th>
      <th>Channel</th>
      <th>Sport</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= program.title %></td>
        <td><%= program.subtitle %></td>
        <td><%= program.category %></td>
        <td><%= program.description %></td>
        <td><%= program.start_datetime %></td>
        <td><%= program.end_datetime %></td>
        <td><%= program.region_id %></td>
        <td><%= program.channel_id %></td>
        <td><%= program.sport_id %></td>
        <td><%= link_to 'Show', program %></td>
        <td><%= link_to 'Edit', edit_program_path(program) %></td>
        <td><%= link_to 'Destroy', program, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

