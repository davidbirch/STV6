<table class="table", id="form-show">
  <tbody>
    <tr>
      <td>ID</td>
      <td><%= @category.id %></td>
    </tr>
    <tr>
      <td>Name</td>
      <td><%= @category.name %></td>
    </tr>
    <tr>
      <td>Black Flag</td>
      <td><%= @category.black_flag %></td>
    </tr>
    <tr>
      <td>Program Count</td>
      <td><%= @programs.count %></td>
    </tr>
  </tbody>
</table>
<p id="form-actions">
  <%= render "shared/form_actions", locals: {actions: ["Edit","Delete"], edit_path: edit_category_path(@category), delete_path: @category} %>  
</p>
