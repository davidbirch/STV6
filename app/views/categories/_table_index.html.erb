<% unless defined?(locals[:header]).nil? %>
<h4><%= locals[:header] %></h4>
<% end %>
<div class="table-responsive small">
  <table class="table table-condensed table-stretched">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Black Flag</th>
        <th>Program Count</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
  
    <tbody>
      <% @categories.each do |category| %>
        <tr id="category_<%= category.id %>">
          <td><%= category.id %></td>
          <td><%= link_to category.name, category %></td>
          <td>
          <% if category.black_flag? %>
            <%= link_to set_black_flag_off_category_path(category), :method => :put do %>
              <i class="fa fa-circle"></i> 
            <% end %>
          <% else %>
            <%= link_to set_black_flag_on_category_path(category), :method => :put do %>
              <i class="fa fa-circle-o"></i> 
            <% end %>
          <% end %>
          </td>
          <td><%= category.programs.count %></td>
          <td><%= render "shared/form_actions", locals: {actions: ["Edit"], edit_path: edit_category_path(category)} %></td>
          <td><%= render "shared/form_actions", locals: {actions: ["Delete"], delete_path: category} %></td> 
        </tr>      
      <% end %>
      <tr class="info">
        <td></td>
        <td><strong>Total</strong></td>
        <td></td>
        <td><strong><%= Program.count %></strong></td>
        <td></td>
        <td></td>
      </tr>
    </tbody>
  </table>
</div>
