<footer class="footer extra-top-margin">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 text-center">
        
        <ul class="list-inline small">
          <li><%= link_to "Home", root_path %></li>
          <li><span class="glyphicon glyphicon-star" aria-hidden="true"></span></li>
          <li><%= link_to "Contact", contact_path %></li>
          <li><span class="glyphicon glyphicon-star" aria-hidden="true"></span></li>
          <li><%= link_to "Privacy", privacy_path %></li>
        </ul>

        <ul class="list-inline small">
          <% if @region %>
            <% Sport.whitelisted.each do |sport| %>
            <li><%= link_to sport.name, ("/"+@region.friendly_id+"/"+sport.friendly_id) %></li>
            <li><span class="glyphicon glyphicon-star" aria-hidden="true"></span></li>
            <% end %>
          <% end %>
        </ul>

      </div> 
    </div>    
  </div>
</footer>