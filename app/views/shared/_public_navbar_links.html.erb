      <ul class="nav navbar-nav navbar-right">
        <% Region.all.order(:name).each do |region| %>
          <% if @region && @region.name == region.name %>
            <li class="active"><%= link_to (region.name+"<span class=\"sr-only\">(current)</span>").html_safe, ("/"+region.friendly_id) %></li>
          <% else %>
            <li><%= link_to region.name, ("/"+region.friendly_id) %></li>
          <% end %>
        <% end %>
      </ul> <!-- /nav navbar-nav navbar-right-->
