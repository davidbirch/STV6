<table class="table table-striped">
  <thead>
    <tr>
      <th>Category</th>
      <th>Count</th>
    </tr>    
  </thead>

  <tbody>
    <tr class="info">
        <td><strong>Total</strong></td>
        <td><strong><%= Program.count %></strong></td>
    </tr>
    <% @programs_by_category.each do |program_by_category| %>
      <tr>
        <td><%= link_to program_by_category[0] , ("/programs-by-category/"+program_by_category[0]).html_safe %></td>
        <td><%= program_by_category[1] %></td>
      </tr>
    <% end %>
    <tr class="info">
        <td><strong>Total</strong></td>
        <td><strong><%= Program.count %></strong></td>
    </tr>
  </tbody>
</table>
