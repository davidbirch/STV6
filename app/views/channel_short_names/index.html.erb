<h3>Channels
<%= link_to new_channel_path, :class => 'btn btn-xs btn-primary' do %>
    <i class="glyphicon glyphicon-plus"></i> New
<% end %>
</h3>
<%= bootstrap_flash %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @channels.group_by(&:short_name).sort.each do |short_name, channels_by_short_name| %>
      <tr>
        <td colspan=2><strong><%= link_to short_name, ("/channels_by_short_name/"+short_name).html_safe %></strong></td>
      </tr>
      <% channels_by_short_name.each do |channel| %>
      <tr>
        <td><%= link_to channel.name, channel %></td>
        <td class="align-right">
          <%= link_to edit_channel_path(channel), :class => 'btn btn-info btn-xs' do %>
            <i class="glyphicon glyphicon-pencil"></i> Edit
          <% end %>
          <%= link_to channel, data:{confirm: 'Are you sure?'}, method: :delete, :class => 'btn btn-danger btn-xs' do %>
            <i class="glyphicon glyphicon-trash"></i> Delete
          <% end %>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
