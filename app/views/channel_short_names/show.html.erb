<ol class="breadcrumb">
  <li><%= link_to title, root_path %></li>
  <li><%= link_to "Channels", channels_by_short_name_path %></li>
  <li class="active">Short Name: <%= params[:short_name] %></li>
</ol>
<%= bootstrap_flash %>
<h4>Short Name: <%= params[:short_name] %></h4>
<h4>List of Channels (Count: <%= @channels.count %>)</h4>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Short name</th>
      <th colspan=2></th>
    </tr>
  </thead>

  <tbody>
    <% @channels.each do |channel| %>
      <tr>
        <td><%= link_to channel.name, channel %></td>
        <td><%= channel.short_name %></td>
        <td>
          <%= link_to edit_channel_path(channel), :class => 'btn btn-info btn-xs' do %>
            <i class="glyphicon glyphicon-pencil"></i> Edit
          <% end %>
        </td>
        <td>
          <%= link_to channel, data:{confirm: 'Are you sure?'}, method: :delete, :class => 'btn btn-danger btn-xs' do %>
            <i class="glyphicon glyphicon-trash"></i> Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
