<%= render "shared/navbar" %>
<%= render "shared/home_header" %>
<%= render "shared/adsense_responsive_banner_1" %>    
<div class="container">
   <%= render "shared/adsense_responsive_banner_2" %>    
   <div class="row extra-top-margin">         
      <%= render "shared/flash" %>  
      <div class="col-sm-12 col-sm-2">   
      </div><!-- /col-md-2 -->
      <div class="col-sm-12 col-sm-8">
         <div class="row">
            <% Region.all.each do |region| %>
            <div class="col-xs-12 col-sm-4">
              <div class="thumbnail">
               <%= link_to ("/"+region.friendly_id) do %>
                  <%= image_tag("city_of_"+region.url_friendly_name+"_140x140.png", alt: region.name) %> 
                  <div class="caption">
                     <h3 class="text-center"><%= region.name %></h3>
                  </div>
               <% end %>
              </div>
            </div>
            <% end %>         
         </div><!-- /row -->
      </div><!-- /col-md-8 -->      
      <div class="col-xs-12 col-sm-2">     
      </div><!-- /col-md-2 -->        
   </div><!-- /row -->
   <%= render "shared/adsense_responsive_banner_2" %>    
</div> <!-- /container -->
<%= render "shared/adsense_responsive_banner_1" %>    
<%= render "shared/footer" %>
